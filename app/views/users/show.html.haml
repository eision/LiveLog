- provide(:title, @user.full_name(logged_in?))
- total = @user.songs.count
%header.page-header
  .pull-right
    - if logged_in? && !@user.activated?
      =link_to glyphicon(:envelope) + '招待する', new_user_activations_path(@user), class: 'btn btn-info btn-lg'
      - if current_user.admin_or_elder? && !@user.songs.exists?
        = link_to glyphicon(:trash) + 'Delete', @user, method: :delete, class: 'btn btn-danger'
      -# TODO: Implement inactivate function

  %h1
    = @user.full_name(logged_in?)

.row
  = render 'panel', title: '出演数・楽器' do
    .panel-body.text-center.lead
      = total
      曲
    %ul.list-group
      - Playing.resolve_insts(@user.playings.count_insts).each do |inst, count|
        - unless inst.blank?
          %li.list-group-item
            %span.badge= count
            = inst

  = render 'panel', title: 'アーティスト' do
    %ul.list-group
      - @user.songs.unscope(:order).group(:artist).count.sort { |(k1, v1), (k2, v2)| v2 <=> v1 }.take(20).each do |artist, count|
        - if count >= 2 && !artist.blank?
          %li.list-group-item
            %span.badge= count
            = artist

  = render 'panel', title: '共演者' do
    .panel-body
      = @playings.group(:user).count.size - 1
      人
    %ul.list-group
      - @playings.group(:user).count.sort{ |(k1, v1), (k2, v2)| v2 <=> v1 }.drop(1).take(20).each do |user, count|
        - if count >= 2 && ((count.to_f / total) >= 0.2 || count > 10)
          %li.list-group-item
            %span.badge= count
            = logged_in? || user.public? ? link_to(user.full_name(logged_in?), user) : user.handle

  = render 'panel', title: '構成人数' do
    %ul.list-group
      - sum = 0
      - Playing.count_formation(@playings.count_members_per_song).each do |formation, count|
        %li.list-group-item
          %span.badge= count
          = "#{formation}人"
        - sum += formation * count
    .panel-body
      = "平均#{(sum.to_f / total).round(2)}人"

  .col-xs-12.col-sm-6.col-md-4
    %section.panel.panel-default
      %header.panel-heading
        %h2.panel-title 自己紹介
      .panel-body
        %dl
          - if logged_in? && current_user.admin?
            %dt Email
            %dd= mail_to @user.email
          - unless @user.url.blank?
            %dt URL
            %dd= link_to @user.url, @user.url, target: '_blank'
        %p= @user.intro

= render 'songs/songs_table', songs: @user.songs, show_live: true
