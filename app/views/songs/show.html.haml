- provide(:title, @song.name)
%article
  %header.page-header
    %h1<
      = "#{@song.name} / #{@song.artist}"
      %small
        = link_to @song.live.title, @song.live
        = '-' unless @song.order.blank?
        = @song.time_str unless @song.time.blank?
        = @song.order

  - if @song.youtube_id.blank?
    %ul#player-list.list-inline
      = render @song.playings
  - else
    .row
      .col-sm-9
        .embed-responsive.embed-responsive-16by9
          = @song.youtube_embed
      .col-sm-3
        %ul#player-list.list-unstyled
          = render @song.playings

  %nav
    %ul.pager
      - if @song.previous.nil?
        %li.previous.disabled
          %a<
            %span{'aria-hidden': true} &larr;
            Previous
      - else
        %li.previous
          = link_to @song.previous do
            %span{'aria-hidden': true} &larr;
            Previous
      - if @song.next.nil?
        %li.next.disabled
          %a<
            Next
            %span{'aria-hidden': true} &rarr;
      - else
        %li.next
          = link_to @song.next do
            Next
            %span{'aria-hidden': true} &rarr;
